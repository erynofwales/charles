# SConscript
# vim: set ft=python:
#
# SConscript for building tests for charles.
#
# Eryn Wells <eryn@erynwells.me>

Import('env')
Import('charles_lib')

files = Split("""
    test_basics.c
    test_charles.c
    test_object.c
""")

test_env = env.Clone()
test_env.Append(LIBS=['check'])
prog = test_env.Program('test_charles', [charles_lib, files])
env.Alias('test', prog)
